{% extends 'layout.html.twig' %}

{% block title %}{{ movie.title }}{% endblock %}

{% block pageTitle %} {{ movie.title }} {% endblock %}

{% block main %}
<div class="row  justify-content-center">
  <div class="card col-sm-6">
      
      <div class="card-body">
          <h5 class="card-title">{{ movie.title }}</h5>
          <img class="card-img-top img-fluid" src="https://lorempixel.com/540/370/" alt="">
      <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">{{movie.author}}</li>
            <li class="list-group-item">{{ movie.releaseYear |date("m/d/Y")}}</li>
            <li class="list-group-item">{{ movie.type}}</li>
          </ul>
          <p class="card-text">{{movie.summary}}</p>
          <a href="{{ path("evaluation", {"id" : movie.id})}}" class="btn btn-primary">Evaluer</a>
          <a href="{{ path("index") }}" class="btn btn-primary">Retour</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}

